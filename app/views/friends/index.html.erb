



  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark table-dark">
      <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
        <th></th>


      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td> <%= friend.first_name%>
          </td>
          <td> <%= friend.last_name%>
          </td>

          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to "Show this friend", friend %> </td>
          <td><%= button_to "Destroy this friend", friend, method: :delete , class:"btn btn-secondary"%></td>




        </tr>
      <% end %>
    </tbody>
  </table>


  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
